<div class="create block mx-auto my-12 px-4 py-3 w-1/3 rounded-lg shadow-lg">
  <div class="icon-form">
    <ion-icon name="refresh-outline"></ion-icon>
  </div>
  <h1 class="text-center text-3xl font-bold">EDITAR COLOR</h1>
  {{#each color}}
    <form action="" method="POST" class="mt-4">
      <input type="text" class="rounded-md w-full text-lg placeholder-gray-500 p-2 my-2" placeholder="Codigo..." name="codigo" value="{{Codigo}}">
      <textarea class="rounded-md w-full text-lg placeholder-gray-500 p-2 my-2 h-40" placeholder="Descripcion..." name="descripcion">{{Descripcion}}</textarea>
      {{>buttons_abm ruta = "color" button = "ACTUALIZAR"}}
    </form>
  {{/each}}
</div>