<div class="login block mx-auto my-12 p-8 text-white w-1/3 rounded-lg shadow-lg">
    <div class="icon-form">
        <ion-icon name="person-circle-outline"></ion-icon>
    </div>
    <h1 class="text-center text-3xl font-bold">INICIAR SESION</h1>
    <form action="/log/iniciar" method="POST" class="mt-4">
        <input type="text" class="rounded-md w-full text-lg placeholder-gray-500 py-2 px-3 mt-5 mb-4" placeholder="Usuario..." name="usuario" required>
        <input type="password" class="rounded-md w-full text-lg placeholder-gray-500 py-2 px-3 my-4" placeholder="Contraseña..." name="contraseña" required>
        <button type="submit" class="rounded-md w-full text-lg text-white font-semibold p-2 mt-4 mb-3">
            <div class="icon-button">
                <ion-icon name="bag-handle-outline"></ion-icon>
            </div>
            <div class="button">
                ACCEDER
            </div>
        </button>
    </form>
</div>